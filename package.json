{
  "name": "vnd-nodejs--rest-backend-template",
  "version": "1.0.0",
  "engines": {
    "node": ">=14.17.1"
  },
  "description": "",
  "author": "Vu Tuan Anh <anhvt@vndgroup.vn>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "db": "rm -rf entities & npx typeorm-model-generator -h 14.232.245.210 -d cds_db_app -p 3306 -u root2 -x Abc#123456 -e mysql -o entities --noConfig true -a",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "export NODE_ENV=development && ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "export NODE_ENV=development && concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "export NODE_ENV=production && node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "ts-node node_modules/.bin/typeorm migration:generate --config ./orm.config.json --name",
    "migration:run": "ts-node node_modules/.bin/typeorm migration:run --config ./orm.config.json",
    "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert--config ./orm.config.json "
  },
  "dependencies": {
    "@nestjs/common": "7.6.18",
    "@nestjs/core": "7.6.18",
    "@nestjs/jwt": "6.1.2",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.6.18",
    "@nestjs/swagger": "4.8.1",
    "@nestjs/typeorm": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^3.4.4",
    "qrcode": "^1.4.4",
    "aws-sdk": "^2.799.0",
    "cache-manager-redis-store": "^2.0.0",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.5.5",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.12.2",
    "cloudinary": "^1.22.0",
    "dotenv": "^8.6.0",
    "fast-sha256": "^1.3.0",
    "fs-extra": "^9.0.1",
    "helmet": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "mysql2": "^2.2.5",
    "nestjs-redis": "^1.3.3",
    "nestjs-stripe": "^0.4.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.7",
    "stripe": "^8.156.0",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^9.1.1",
    "typeorm": "^0.2.25",
    "typeorm-model-generator": "^0.4.5",
    "typescript": "4.3.4"
  },
  "devDependencies": {
    "@golevelup/nestjs-testing": "^0.1.2",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "7.6.18",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.11",
    "@types/multer": "^1.4.5",
    "@types/crypto-js": "^4.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.10",
    "@types/node": "14.17.3",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.10",
    "concurrently": "^5.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.6",
    "tsconfig-paths": "^3.9.0",
    "wait-on": "^5.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
